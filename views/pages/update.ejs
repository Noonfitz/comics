<%- include('../partials/head') -%>

 
<%- include('../partials/nav') -%>


<div class="background-page">

  <div class="update-content">
<h1>UPDATE COMIC</h1>


<form action="/books/<%= foundBook._id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">

  <label for="image"></label>   <!--temporarily handle images -->
  <input type="text" name="image" id="image" value="<%= foundBook.image %>" placeholder="image">

    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= foundBook.title %>" placeholder="Tittle value stored in database" required>
    
    
    <label for="author">Author:</label>
    <input type="text" name="author" id="author" value="<%= foundBook.author %>" placeholder="Author value stored in database" required>
    
    <label for="publisher">Publisher:</label>
    <select class="publisher" name="publisher" id="publisher">
        <option value="<%= foundBook.publisher %>" selected><%= foundBook.publisher %></option>
        <option value="boomBox">&#10004; BOOM! Box</option>
        <option value="DCComics">&#10004; DC Comics</option>
        <option value="harry">&#10004; Harry N. Abrams</option>
        <option value="Icon">&#10004; Icon Books</option>
        <option value="ImageComic">&#10004; Image Comics</option>
        <option value="Marvel">&#10004; Marvel</option>
        <option value="Simon&schu">&#10004; Simon & Schuster</option>
        <option value="topShelf">&#10004; Top Shelf Productions</option>
        <option value="VizMedia">&#10004; VIZ Media LLC</option>
    </select>
    
    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="<%= foundBook.genre %>"  placeholder="Genre value stored in database" >
    
    <label for="numpages">Number of pages:</label>
    <input type="number" name="numpages" id="numpages" value="<%= foundBook.pages %>" placeholder="255">
    
    <label for="rating">Rating:</label>
    <input type="number" name="rating" id="rating" value="<%= foundBook.rating %>" min="1" max="4" placeholder="5">
    
    <label for="synopsis">Synopsis:</label>
    <textarea name="synopsis" id="synopsis" cols="20" rows="3" ><%= foundBook.synopsis %>"</textarea>
    
    <input type="submit" id ="create-button"  value="Submit" />
    
</form>



</div>
</div>
     

<%- include('../partials/footer') -%>